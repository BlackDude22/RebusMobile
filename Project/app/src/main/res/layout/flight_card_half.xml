<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTemplate"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="10dp"
        android:layout_marginBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="2">

                <TableRow>

                    <TextView
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:text="From" />

                    <TextView
                        android:layout_width="33dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:text="To" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/cardToDepartureAirport"
                        android:layout_width="76dp"
                        android:layout_height="wrap_content"
                        android:text="City (CODE)" />

                    <TextView
                        android:id="@+id/cardToStops"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="Stops" />

                    <TextView
                        android:id="@+id/cardToArrivalAirport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City (CODE)" />

                    <TextView
                        android:id="@+id/cardToPrice"
                        android:layout_width="63dp"
                        android:layout_height="wrap_content"
                        android:text="Price" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/cardToDepartureTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure Time" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/cardToArrivalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrival Time" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>